# threshold for Prod - if performance is a prob ERROR. INFO OTHERWISE.
log4j.threshold=DEBUG

log4j.rootLogger=ALL,INFO,DEBUG, Trace,stdout

log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.Trace=org.apache.log4j.RollingFileAppender

log4j.appender.Trace.File=C:/MgstechServicesLogs/mgstech-ws.log

# Uncomment and update the path for Linux environments
#log4j.appender.Trace.File=/services_logs/mgstech-ws.log

log4j.appender.Trace.MaxFileSize=10240KB

log4j.appender.Trace.MaxBackupIndex=100
log4j.appender.Trace.layout=org.apache.log4j.PatternLayout
log4j.appender.Trace.layout.ConversionPattern=%d %t %-5p %15C{1} - %m%n
log4j.appender.Trace.threshold=ALL

logging.level.com.Mgstech=DEBUG

logging.level.root=info
logging.file.path=/my-logs/app.log
